<Window x:Class="WpfAnimaceVcodeBehindu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAnimaceVcodeBehindu"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Rectangle x:Name="rctRamecek" Width="100" Height="30"
            Fill="Lime" Stroke="Black"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            MouseUp="ZmenPruhlednost" MouseEnter="MenVelikost" Margin="20,0,0,0" />
        <Rectangle Grid.Row="1" x:Name="rctMik" Width="100" Height="30"
            Fill="Orange" Stroke="Black"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            MouseUp="ZmenPruhlednost" MouseEnter="MenVelikost" Margin="20,0,0,0" />
    </Grid>
</Window>
