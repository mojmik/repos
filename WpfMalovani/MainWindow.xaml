<Window x:Class="WpfMalovani.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMalovani"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Width="200" Height="300">
            <TextBlock Text="Sirka (max 100)" Margin="20" />
            <TextBox x:Name="sirkaTextBox" Margin="20,0,20,0" />
            <TextBlock Text="Vyska (max 100" Margin="20,30,20,20" />
            <TextBox x:Name="vyskaTextBox" Margin="20,0,20,30" />
            <Button x:Name="novyButton" Content="OK" Margin="20" Click="novyButton_Click" />
        </StackPanel>
    </Grid>
    
</Window>
