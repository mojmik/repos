<Window x:Class="WpfSibenice.ProhraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSibenice"
        mc:Ignorable="d"
        Title="ProhraWindow" Height="450" Width="800" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <TextBlock Text="Prohrál jsi!" Grid.Row="0" FontSize="32" />
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBlock Text="Hledané slovo bylo: " Grid.Row="1" FontSize="32" />
            <TextBlock Name="hledaneSlovoTextBlock" Text="" Grid.Row="1" FontSize="32" />
        </StackPanel>
        <Button Name="okButton" Grid.Row="2" Width="100" Height="50" Content="OK" Click="okButton_Click" />
    </Grid>
    
    
</Window>
