<Window x:Class="FoeHelper2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoeHelper2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Ready" Name="mainStatusTextBlock" />
        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Path=Mout}" />
        <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding Path=MoutExt}" />
        <Button Grid.Column="1" Grid.Row="1" Click="GoKnajpa">Button Knajpa</Button>
        <Button Grid.Column="1" Grid.Row="2" Click="GoPixel">Button 2</Button>

    </Grid>
</Window>
